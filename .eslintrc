{
  "parser": "babel-eslint",
  "plugins": ["react", "react-hooks", "prettier"],
  "rules": {
    "no-case-declarations": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
